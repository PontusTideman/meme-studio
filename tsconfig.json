{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@client/components/*": ["client/ts/components/*"],
      "@client/containers/*": ["client/ts/containers/*"],
      "@client/store/*": ["client/ts/store/*"],
      "@client/utils/*": ["client/ts/utils/*"],
      "@client/*": ["client/ts/*"],
      "@server/*": ["server/lib/*"],
      "@shared/*": ["shared/*"],
      "@src/*": ["*"]
    },
    "typeRoots": ["./src/client/node_modules/@types/", "./node_modules/@types/", "src/server/node_modules/@types"]
  },
  "include": ["./src/client/ts/**/*.ts", "./src/client/ts/**/*.tsx", "src/server/**/*.ts"]
}
