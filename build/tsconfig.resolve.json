{
  "compilerOptions": {
    "outDir": "../dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es6",
    "baseUrl": "../dist",
    "paths": {
      "@server/*": ["server/lib/*"],
      "@shared/*": ["shared/*"],
      "@src/*": ["*"]
    },
    "typeRoots": ["../node_modules/@types/", "../src/server/node_modules/@types/"]
  },
  "include": ["../src/server/**/*.ts"]
}