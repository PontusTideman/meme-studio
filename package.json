{
  "name": "meme-studio",
  "version": "1.0.0",
  "description": "A complete meme generator coded in React / Express / Typescript",
  "scripts": {
    "dev": "npm run dev:server & npm run dev:client",
    "dev:client": "webpack-dev-server -w",
    "dev:server": "ts-node -r tsconfig-paths/register ./src/server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production",
    "build:server": "tsc -b ./build/tsconfig.server.json && npx tscpaths -p build/tsconfig.resolve.json -s ./dist -o ./dist",
    "start": "node ./dist/server/index.js",
    "commit": "git-cz",
    "lint": "tsc --noEmit && eslint '*/**/*.{ts,tsx}'",
    "ncu": "node tasks/ncu.js",
    "postinstall": "(cd src/server && npm install); (cd src/client && npm install);"
  },
  "engines": {
    "node": "12.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viclafouch/meme-studio.git"
  },
  "keywords": [
    "typescript",
    "express",
    "react",
    "api",
    "react-hooks",
    "meme-generator"
  ],
  "author": "Victor de la Fouchardiere",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/viclafouch/meme-studio/issues"
  },
  "homepage": "https://github.com/viclafouch/meme-studio#readme",
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/bluebird": "^3.5.30",
    "@types/cookie-parser": "^1.4.2",
    "@types/copy-webpack-plugin": "5.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/helmet": "0.0.45",
    "@types/html-webpack-plugin": "3.2.2",
    "@types/mini-css-extract-plugin": "0.9.1",
    "@types/morgan": "^1.9.0",
    "@types/node": "13.9.0",
    "@types/sequelize": "^4.28.8",
    "@types/shortid": "0.0.29",
    "@types/validator": "^12.0.1",
    "@types/webpack": "4.41.7",
    "@types/webpack-dev-server": "3.10.0",
    "@types/webpack-merge": "4.1.5",
    "@typescript-eslint/eslint-plugin": "2.22.0",
    "@typescript-eslint/parser": "2.22.0",
    "babel-eslint": "10.1.0",
    "clean-webpack-plugin": "3.0.0",
    "commitizen": "4.0.3",
    "copy-webpack-plugin": "5.1.1",
    "cross-env": "7.0.2",
    "css-loader": "3.4.2",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "4.2.3",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.13.1",
    "npm-check-updates": "4.0.4",
    "prettier": "1.19.1",
    "sass-loader": "8.0.2",
    "source-map-loader": "0.2.4",
    "style-loader": "1.1.3",
    "ts-loader": "6.2.1",
    "ts-node": "^8.6.2",
    "tscpaths": "0.0.9",
    "typescript": "3.8.3",
    "webpack": "4.42.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-fix-style-only-entries": "0.4.0",
    "webpack-merge": "4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "1.4.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "helmet": "^3.21.3",
    "morgan": "^1.9.1",
    "prettier": "^1.19.1",
    "sequelize": "^5.21.5",
    "shortid": "^2.2.15",
    "sqlite": "^3.0.3"
  }
}
