{
  "name": "meme-studio",
  "version": "1.0.0",
  "description": "A complete meme generator coded in React / Express / Typescript",
  "scripts": {
    "dev": "npm run dev-client & npm run dev-api",
    "dev-client": "webpack-dev-server -w",
    "dev-api": "ts-node -r tsconfig-paths/register ./src/api/index.ts",
    "commit": "git-cz",
    "build": "webpack --mode production",
    "lint": "tsc --noEmit && eslint '*/**/*.{ts,tsx}'",
    "ncu": "node tasks/ncu.js",
    "postinstall": "(cd src/api && npm install); (cd src/client && npm install);"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viclafouch/meme-studio.git"
  },
  "keywords": [
    "typescript",
    "express",
    "react",
    "api",
    "react-hooks",
    "meme-generator"
  ],
  "author": "Victor de la Fouchardiere",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/viclafouch/meme-studio/issues"
  },
  "homepage": "https://github.com/viclafouch/meme-studio#readme",
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/copy-webpack-plugin": "5.0.0",
    "@types/html-webpack-plugin": "3.2.2",
    "@types/mini-css-extract-plugin": "0.9.1",
    "@types/node": "13.9.0",
    "@types/shortid": "0.0.29",
    "@types/webpack": "4.41.7",
    "@types/webpack-dev-server": "3.10.0",
    "@typescript-eslint/eslint-plugin": "2.22.0",
    "@typescript-eslint/parser": "2.22.0",
    "babel-eslint": "10.1.0",
    "clean-webpack-plugin": "3.0.0",
    "commitizen": "4.0.3",
    "copy-webpack-plugin": "5.1.1",
    "cross-env": "7.0.2",
    "css-loader": "3.4.2",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "4.2.3",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.13.1",
    "npm-check-updates": "4.0.4",
    "prettier": "1.19.1",
    "sass-loader": "8.0.2",
    "source-map-loader": "0.2.4",
    "style-loader": "1.1.3",
    "ts-loader": "6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3",
    "webpack": "4.42.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-fix-style-only-entries": "0.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "shortid": "^2.2.15"
  }
}
