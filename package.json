{
  "name": "meme-studio",
  "version": "1.0.0",
  "description": "A complete meme generator coded in React / Express / Typescript",
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:client": "webpack-dev-server --config ./build/webpack.client.js -d",
    "dev:server": "webpack --config ./build/webpack.server.js -d",
    "build": "npm-run-all --parallel build:client build:server",
    "build:client": "webpack --config ./build/webpack.client.js -p",
    "build:server": "webpack --config ./build/webpack.server.js -p",
    "start": "cross-env NODE_ENV=production node ./dist/server/index.js",
    "commit": "git-cz",
    "lint": "tsc --noEmit && eslint --ext .ts,.tsx src/",
    "ncu": "node tasks/ncu.js",
    "postinstall": "(node tasks/download.js) && (cd src/client && npm install);"
  },
  "engines": {
    "node": "12.8.1",
    "npm": "6.13.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viclafouch/meme-studio.git"
  },
  "keywords": [
    "typescript",
    "express",
    "react",
    "api",
    "react-hooks",
    "meme-generator"
  ],
  "author": "Victor de la Fouchardiere",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/viclafouch/meme-studio/issues"
  },
  "homepage": "https://github.com/viclafouch/meme-studio#readme",
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/bluebird": "^3.5.30",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.5",
    "@types/helmet": "0.0.45",
    "@types/morgan": "^1.9.0",
    "@types/node": "13.11.1",
    "@types/sequelize": "^4.28.8",
    "@types/shortid": "0.0.29",
    "@types/twit": "2.2.23",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "babel-eslint": "10.1.0",
    "clean-webpack-plugin": "3.0.0",
    "commitizen": "4.0.4",
    "copy-webpack-plugin": "5.1.1",
    "cross-env": "7.0.2",
    "css-loader": "3.5.1",
    "cz-conventional-changelog": "3.1.0",
    "dotenv-webpack": "1.7.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "html-webpack-plugin": "4.0.4",
    "husky": "4.2.3",
    "image-size": "0.8.3",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.13.1",
    "npm-check-updates": "4.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.4",
    "sass-loader": "8.0.2",
    "source-map-loader": "0.2.4",
    "style-loader": "1.1.3",
    "ts-loader": "6.2.2",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-bundle-analyzer": "3.6.1",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-fix-style-only-entries": "0.4.0",
    "webpack-node-externals": "1.7.2",
    "webpack-shell-plugin": "0.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "morgan": "^1.10.0",
    "sequelize": "^5.21.6",
    "shortid": "^2.2.15",
    "sqlite3": "4.1.1",
    "twit": "2.2.11"
  }
}
